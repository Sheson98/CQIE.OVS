@using CQIE.RIS.Domain;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>教师评教管理系统</title>
    <link rel="stylesheet" href="~/NIO/layui-v2.5.6/css/layui.css" media="all"/>
    <script src="~/NIO/layui-v2.5.6/layui.js" charset="utf-8"></script>
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">教师评教管理系统</div>
            <!-- 头部区域（可配合layui已有的水平导航） -->
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item"><a href="">控制台</a></li>
                <li class="layui-nav-item"><a href="">商品管理</a></li>
                <li class="layui-nav-item"><a href="">用户</a></li>
                <li class="layui-nav-item">
                    <a href="javascript:;">其它系统</a>
                    <dl class="layui-nav-child">
                        <dd><a href="">邮件管理</a></dd>
                        <dd><a href="">消息管理</a></dd>
                        <dd><a href="">授权管理</a></dd>
                    </dl>
                </li>
            </ul>


            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="~/NIO/images/headimg.jpg" class="layui-nav-img">
                        刘德华
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="">基本资料</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a href="~/Views/Login/Login.cshtml">退了</a></li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                @if (ViewBag.PrivilegeList == null)
                {
                    Response.Redirect(Url.Content("www.baidu.com"));
                }
                @foreach (SysFunction menu in ViewBag.PrivilegeList as System.Collections.IEnumerable)
                {
                    if (menu.ActionName == null || menu.ActionName.Length == 0)
                    {
                        <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                        <ul class="layui-nav layui-nav-tree" lay-filter="test">
                            <li class="layui-nav-item">
                                <a href="javascript:;">@menu.SysFunctionName</a>
                                <dl class="layui-nav-child">
                                    @foreach (SysFunction leftmenu in ViewBag.PrivilegeList as System.Collections.IEnumerable)
                                    {
                                        if (leftmenu.ParentFunc != null && leftmenu.ParentFunc == menu && menu.ActionName.Length == 0)
                                        {
                                            @*<dd><a href="/@leftmenu.ControllName/@leftmenu.ActionName" target="MS">@leftmenu.SysFunctionName</a></dd>*@
                                            <a href="../UserManage/StuManage">点我</a>

                                        }
                                    }
                                </dl>
                            </li>
                        </ul>
                    }
                    else if (menu.ParentFunc == null && menu.ActionName != null && menu.ActionName.Length != 0)
                    {
                        <dd><a href="/@menu.ControllName/@menu.ActionName" target="MS">@menu.SysFunctionName</a></dd>
                    }
                }

            </div>
        </div>

        <div class="layui-body">
            <!-- 内容主体区域 -->
            <!-- <div style="padding: 15px;">内容主体区域</div> -->
            <iframe src="" frameborder="0" name="MS" width="1200px" height="800px"></iframe>

        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © layui.com - 底部固定区域
        </div>
    </div>
    <script src="~/NIO/layui-v2.5.6/layui.js"></script>
    <script>
        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;

        });
    </script>
</body>
</html>
